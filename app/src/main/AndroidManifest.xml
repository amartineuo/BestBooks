        android:supportsRtl="true"
        android:theme="@style/Theme.BestBooks">
        <activity
            android:name=".UserFavsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ProfileActivity" />
        </activity>

        <activity
            android:name=".UserBooksActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ProfileActivity" />
        </activity>

        <activity
            android:name=".ModifyBookActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
