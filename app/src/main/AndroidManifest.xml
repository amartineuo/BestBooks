        <activity
            android:name=".modifyProfile.ModifyProfileActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".profile.ProfileActivity" />
        </activity>

        <activity
            android:name=".addBook.AddBookActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".principal.PrincipalActivity" />
        </activity>

        <activity
            android:name=".profile.ProfileActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".principal.PrincipalActivity" />
        </activity>

        <activity android:name=".principal.PrincipalActivity" />

        <activity android:name=".login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>