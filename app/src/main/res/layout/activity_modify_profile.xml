<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/display_modify_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModifyProfileActivity">

    <LinearLayout
        android:id="@+id/linear_modify_sup"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/color_principal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/view_modify"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_principal" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative_modify_profile"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/display_image_modify"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="25dp"
            app:cardElevation="8dp"
            app:cardMaxElevation="8dp">

            <ImageView
                android:id="@+id/image_profile_modify"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/title_user_img"
                tools:srcCompat="@drawable/ic_person" />

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_modify_info"
        android:layout_width="388dp"
        android:layout_height="479dp"
        android:layout_marginBottom="80dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_modify_sup"
        tools:visibility="visible">

        <LinearLayout
            android:id="@+id/linear_modify_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/display_new_name"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:lineSpacingExtra="8sp"
                    android:text="@string/title_name"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/new_name"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/title_name"
                    android:inputType="textPersonName|text"
                    android:autofillHints="" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/liner_modify_username_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:weightSum="2"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/linear_modify_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/display_new_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="16dp"

                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:lineSpacingExtra="8sp"
                    android:text="@string/title_username"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/new_username"
                    android:layout_width="262dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/title_username"
                    android:inputType="textPersonName"
                    android:autofillHints="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/display_new_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:lineSpacingExtra="8sp"
                    android:text="@string/title_age"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/new_age"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/title_age"
                    android:inputType="number"
                    android:autofillHints="" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_modify_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:weightSum="2"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/display_new_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="start"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:lineSpacingExtra="8sp"
                    android:text="@string/title_email"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/new_email"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:autofillHints="" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_modify_password"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:layout_marginTop="8dp"
            android:weightSum="2"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/display_new_password"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:lineSpacingExtra="8sp"
                    android:text="@string/password"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="196dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/last_password"
                            android:layout_width="180dp"
                            android:layout_height="40dp"
                            android:layout_margin="16dp"
                            android:ems="10"
                            android:hint="@string/title_password_old"
                            android:inputType="textPassword"
                            android:textAlignment="viewStart"
                            android:autofillHints="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/new_password"
                            android:layout_width="180dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="16dp"
                            android:ems="10"
                            android:hint="@string/title_password_new"
                            android:inputType="textPassword"
                            android:textAlignment="viewStart"
                            android:autofillHints="" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_accept_edit"
        android:layout_width="152dp"
        android:layout_height="58dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="180dp"
        android:backgroundTint="@color/color_principal"
        android:text="@string/modify"
        android:textSize="16sp"
        app:cornerRadius="30dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_cancel_edit"
        android:layout_width="152dp"
        android:layout_height="58dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="500dp"
        android:backgroundTint="@color/color_principal"
        android:text="@string/cancel"
        android:textSize="16sp"
        app:cornerRadius="30dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>